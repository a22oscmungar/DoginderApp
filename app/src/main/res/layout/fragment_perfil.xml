<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragmentPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="SOBRE TU MASCOTA"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/naranjaFlojo"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="27sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">


                <ImageView
                    android:id="@+id/ivFotoMascota"
                    android:layout_width="360dp"
                    android:layout_height="500dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagen_doginder" />

                <ImageView
                    android:id="@+id/ivGeneroMascota"
                    android:layout_width="250px"
                    android:layout_height="250px"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/tvNombreMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="435dp"
                    android:text="Nombre"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"
                android:layout_marginVertical="25dp">

                <TextView
                    android:id="@+id/tvTamano"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_mensaje"
                    android:text="TAMAÃ‘O"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvRazaMascota"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_mensaje"
                    android:text="TERRENO"
                    android:layout_marginHorizontal="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvEdadMascota"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_mensaje"
                    android:text="EDAD"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/banner_shadow">

                <TextView
                    android:id="@+id/tvDescripcionMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRelacionMascotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_mensaje"/>

                <TextView
                    android:id="@+id/tvRelacionHumanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/background_mensaje"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/naranjaFlojo"
                android:gravity="center"
                android:text="SOBRE TI"
                android:textAlignment="center"
                android:textSize="27sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreHumano"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/background_mensaje"/>

                <TextView
                    android:id="@+id/tvEdadHumano"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="25dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_mensaje"/>

                <TextView
                    android:id="@+id/tvGeneroHumano"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/background_mensaje" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>